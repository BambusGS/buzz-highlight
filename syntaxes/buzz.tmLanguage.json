{
    "scopeName": "source.buzz",
    "name": "Buzz",
    "patterns": [
      {
        "include": "#comments"
      },
      {
        "include": "#strings"
      },
      {
        "include": "#keywords"
      },
      {
        "include": "#numbers"
      },
      {
        "include": "#operators"
      },
      {
        "include": "#builtin_functions"
      }
    ],
    "repository": {
      "comments": {
        "patterns": [
          {
            "name": "comment.line.number-sign.buzz",
            "match": "#.*$"
          }
        ]
      },
      "strings": {
        "patterns": [
          {
            "name": "string.quoted.double.buzz",
            "begin": "\"",
            "end": "\"",
            "patterns": [
              {
                "name": "constant.character.escape.buzz",
                "match": "\\\\."
              }
            ]
          }
        ]
      },
      "keywords": {
        "patterns": [
          {
            "name": "keyword.control.buzz",
            "match": "\\b(var|function|if|else|while|for|foreach|include|return|nil|and|or|not)\\b"
          },
          {
            "name": "storage.type.buzz",
            "match": "\\b(integer|float|string|table|closure|userdata)\\b"
          }
        ]
      },
      "numbers": {
        "patterns": [
          {
            "name": "constant.numeric.buzz",
            "match": "\\b\\d+(\\.\\d+)?\\b"
          }
        ]
      },
      "operators": {
        "patterns": [
          {
            "name": "keyword.operator.arithmetic.buzz",
            "match": "(\\+|\\-|\\*|\\/|\\^|%)"
          },
          {
            "name": "keyword.operator.comparison.buzz",
            "match": "(==|!=|<=|>=|<|>)"
          }
        ]
      },
      "builtin_functions": {
        "patterns": [
          {
            "name": "support.function.buzz",
            "match": "\\b(type|size|foreach|map|reduce|log|print|fopen|fclose|fsize|fforeach|fwrite)\\b"
          },
          {
            "name": "support.function.buzz",
            "match": "\\b(setseed|uniform|gaussian|exponential)\\b"
          },
          {
            "name": "support.function.buzz",
            "match": "\\b(math\\.abs|math\\.log|math\\.log2|math\\.log10|math\\.exp|math\\.sqrt|math\\.sin|math\\.cos|math\\.tan|math\\.asin|math\\.acos|math\\.atan|math\\.min|math\\.max|math\\.pi)\\b"
          },
          {
            "name": "support.function.buzz",
            "match": "\\b(neighbors\\.get|neighbors\\.kin|neighbors\\.nonkin|neighbors\\.map|neighbors\\.reduce|neighbors\\.filter|neighbors\\.foreach|neighbors\\.count|neighbors\\.broadcast|neighbors\\.listen|neighbors\\.ignore)\\b"
          },
          {
            "name": "support.function.buzz",
            "match": "\\b(swarm\\.create|swarm\\.intersection|swarm\\.union|swarm\\.difference)\\b"
          },
          {
            "name": "support.function.buzz",
            "match": "\\b(stigmergy\\.create)\\b"
          }
        ]
      }
    }
  }
  